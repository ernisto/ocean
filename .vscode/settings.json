{
    // editor
    "editor.formatOnSave": true,

    // files
    "files.eol": "\n",
    "files.readonlyInclude": {
        "**/node_modules/**": true,
        "node_modules/**": true,

        "**/_Index/**": true,
        "*Packages/**": true,

        "**/.pesde/**": true,
        "*_packages/**": true,
        "pesde.lock": true,
        ".pesde": true,

        "package-lock.json": true,
        "sourcemap.json": true,
        "dist": true,
    },
    "files.exclude": {
        ".vscode": false,
        ".github": false,
        ".husky": false,
        ".pesde": false,
        "pesde.lock": false,
        "package-lock.json": false,
        "sourcemap.json": false,
        "roblox_server_packages": false,
        "roblox_packages": false,
        "lune_packages": false,
        "luau_packages": false,
        "node_modules": false,
        "scripts": false,
        "dist": false,
        ".gitattributes": false,
        ".gitignore": false,
        ".luaurc": false,
        "asphalt.toml": false,
        "stylua.toml": false,
        "pesde.toml": false,
        "mantle.yml": false,
        "*.rbxl": false,
        "*.rbxl.lock": false
    },

    // schemas
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
    },

    // luau lsp
    "stylua.targetReleaseVersion": "latest",
    "luau-lsp.platform.type": "roblox",
    "luau-lsp.bytecode.vectorCtor": "new",
    "luau-lsp.bytecode.vectorLib": "Vector3",
    "luau-lsp.bytecode.vectorType": "Vector3",
    "luau-lsp.completion.imports.requireStyle": "alwaysRelative",
    "luau-lsp.types.robloxSecurityLevel": "LocalUserSecurity",
    "luau-lsp.sourcemap.rojoProjectFile": "dev.project.json",
    "luau-lsp.sourcemap.includeNonScripts": true,
    "luau-lsp.fflags.enableNewSolver": false,
    "luau-lsp.diagnostics.strictDatamodelTypes": true,
    "luau-lsp.diagnostics.workspace": true,
    "luau-lsp.ignoreGlobs": [
        "**/node_modules/**",
        "node_modules/**",
        "**/_Index/**",
        "**/.pesde/**",
        "dist/**"
    ],
    "luau-lsp.completion.imports.ignoreGlobs": [
        "**/node_modules/**",
        "**/_Index/**",
        "**/.pesde/**",
        "benches/**",
        "*.bench.luau",
        "stories/**",
        "*.story.luau",
        "tests/**",
        "*.spec.luau",
    ],
}